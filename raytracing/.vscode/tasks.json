{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Build app (clang/LLVM)",
      "command": "clang++",
      "detail": "Build the optimized engine",
      "args": ["-fcolor-diagnostics", "-g", "main.cpp", "src/**/*.cpp", "-o", "main", "-O3"],
      "problemMatcher": ["$gcc"],
      "hide": false,
      "isBackground": false,
      "icon": {
        "color": "terminal.ansiWhite",
        "id": "wrench"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
